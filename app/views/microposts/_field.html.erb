<%= form_for @micropost do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
  	<%= f.label :title %><br />
  	<%= f.text_field :title %><br />
	
  	<%= f.label :content %><br />
  	<%= f.text_area :content, :row => 30, :cols=> 30 %><br />
  	
  	<%= f.label :category %><br />
  	<%= f.text_field :category %><br />
	
  		
	<%= f.submit "Post" %>

<% end %>