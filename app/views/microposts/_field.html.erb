<%= form_for @micropost do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
  	<%= f.label :title %><br />
  	<%= f.text_field :title %><br />
	
  	<%= f.label :content %><br />
  	<%= f.text_area :content, :row => 30, :cols=> 30 %><br />
  	
  	<%= f.label :category %><br />
  	
	<%=  
  		@category = Micropost.select("category").group("category")
  		select_tag(:category,  
   		options_from_collection_for_select(@category, :category, :category))  
	%>
  		
	<%= f.submit "Post" %>

<% end %>